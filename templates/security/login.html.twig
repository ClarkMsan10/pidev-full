{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

 <div class="cont">
        <div class="photo-container">
            <div class="photo-title">
                <h1>Pidev Full</h1>
                <p>La plateforme des idées de projets pidev</p>
            </div>
            <div class="photo">
                <img src="/assets/img/peopleaz.svg" alt="">
                <a href="https://storyset.com/work">Work illustrations by Storyset</a>
            </div>
        </div>

        <div class="vertical-separator"></div>

         <div class="form-container">
            <div class="title-form">
                <h3>Suis content de te revoir !</h3>
                <p>Ensemble, présentons nos projets !</p>
            </div>
            <div class="content-form">
                <div class="container">


<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
                    <form>
                        <fieldset class="form-group row">
                            <div class="col-sm-8">
                                <label for="inputEmail" class="col-sm-1-12 col-form-label">Email :</label>
                                <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                        </fieldset>
                        <fieldset class="form-group row">
                            <div class="col-sm-8">
                                <label for="inputName" class="col-sm-1-12 col-form-label">Mot de passe :</label>
                               <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>
                        </fieldset>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                        <div class="form-group login-button">
                            <div>
                                <button type="submit" class="btn btn-outline-primary">Se Connecter</button>
                            </div>
                            <p>
                                <a href="{{path('app_forgot_password_request')}}">Mot de passe oublié ?</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="footer-form">
                Tu n'as pas de compte ? <a href="{{path('app_register')}}">Rejoins nous</a>
            </div>
        </div>
    </div>

