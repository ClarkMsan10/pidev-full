{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    

    <div class="cont">
        <div class="photo-container">
            <div class="photo-title">
                <h1>Pidev Full</h1>
                <p>La plateforme des idées de projets pidev</p>
            </div>
            <div class="photo">
                <img src="/assets/img/peopleaz.svg" alt="">
                <a href="https://storyset.com/work">Work illustrations by Storyset</a>
            </div>
            {% for flash_error in app.flashes('verify_email_error') %}
                 <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
        </div>
        <div class="vertical-separator"></div>
        <div class="form-container">
            <div class="title-form">
                <h3>Bienvenue chez toi</h3>
                <p>Ensemble, présentons nos projets !</p>
            </div>
            <div class="content-form">
                <div class="container">
                   {{ form_start(registrationForm) }}
                        <fieldset class="form-group row">
                            <div class="col-sm-6">
                                {{ form_row(registrationForm.firstname) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(registrationForm.lastname) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group row">
                            <div class="col-sm-12">
                               {{ form_row(registrationForm.email) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group row">
                            <div class="col-sm-12">
                            {{ form_row(registrationForm.plainPassword, {label: 'Password' }) }}
                            </div>
                        </fieldset>

                        <fieldset class="form-row row mt-2">
                            <div class="form-check col-sm-12">
                                {{ form_row(registrationForm.agreeTerms)  }}<a href="">Voir Conditions du site</a>
                            </div>
                        </fieldset>

                        <div class="form-group col-sm-12 register-button">
                            <button type="submit" class="btn btn-outline-primary">S'inscrire</button>
                        </div>


                   {{ form_end(registrationForm) }}
                </div>
            </div>
            <div class="footer-form">
                Tu possedes dejà un compte ? <a href="{{path('app_login')}}">Connecte toi</a>
            </div>
        </div>
    </div>

{% endblock %}
